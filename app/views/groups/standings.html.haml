%h1
  Standings

- @group_divisions.each_pair do |key, rosters|
  %table.division
    - if @group_divisions.count > 1
      %caption
        = "#{key} #{AppSettings.app_alias_division.capitalize}"
    %thead
      %tr
        %th.name
          Team
        %th.group-wins
          W
        %th.group-losses
          L
        %th.group-ties
          T
        %th.points-for
          PF
        %th.points-against
          PA
    %tbody
      - rosters.each do |roster|
        %tr{ class: "row-#{roster.id}" }
          %td.name
            = link_to roster.name, group_roster_path(@group, roster)
          %td.group-wins
            = "0" #roster.roster_stat_seasons.where(season: AppSettings.app_season).first.wins
          %td.group-losses
            = "0" #roster.roster_stat_seasons.where(season: AppSettings.app_season).first.losses
          %td.group-ties
            = "0" #roster.roster_stat_seasons.where(season: AppSettings.app_season).first.ties
          %td.points-for
            = "0" #roster.roster_stat_seasons.where(season: AppSettings.app_season).first.points_for
          %td.points-against
            = "0" #roster.roster_stat_seasons.where(season: AppSettings.app_season).first.points_against

