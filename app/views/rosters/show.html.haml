%h1
  = @roster.name

%table
  %thead
    %tr
      %th
        Slot
      %th
        Pos
      %th
        Player
  %tbody
    - @roster_slots.each do |slot|
      %tr
        %td
          = slot.roster_slot_type.name
        %td
          = slot.roster_slot_position.name
        %td
          = slot.player.full_name